<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="bookMapper2">


<update id="bookUpdate" parameterType="jdbc.bean.BookDTO">
	update book
	<trim prefix ="set" suffixOverrides=",">
	<if test="writer != null"> writer=#{writer}</if>
	<if test="title != null"> title=#{title}</if>
	<if test="content != null"> content=#{content}</if>
	</trim>
		where num=#{num}
</update>


<select id="bookFor" resultType="jdbc.bean.BookDTO"
						parameterType="list">
	select * from book where writer in
	<foreach item="data" collection="list"
		open="()" separator="," close=")" >
		#{data}
	</foreach>		
</select>


<select id="bookLike" resultType="jdbc.bean.BookDTO"
						parameterType="String">
select * from book where writer like '%'|| #{value}# || '%'						
</select>

</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="bookMapper">


<sql id="whereNum">
  		where num=#{num}
  	</sql>

<insert id="bookInsert" parameterType="jdbc.bean.BookDTO">
	insert into book values(book_seq.nextval,#{writer},#{title},#{content},sysdate)
</insert>

<delete id="bookDelete" parameterType="int" >
	delete from book where num=#{num}
</delete>
  
<select id ="bookIf" resultType= "jdbc.bean.BookDTO" parameterType="int">
	select * from book
	<if test=" num> 0">
		where num=${num}
	</if>
</select>
  
 <select id="bookChoose" resultType="jdbc.bean.BookDTO"
 							parameterType="jdbc.bean.BookDTO">
 		select*from book
 		<choose>
 		<when test="num>0">
 				where writer=#{writer}
 			</when>
 		</choose>
 </select>
 
 <select id="bookTrime" resultType="jdbc.bean.BookDTO"
 							parameterType="jdbc.bean.BookDTO">
 		select*from book
 		<trim prefix="where" prefixOverrides="and">
 			<if test="num >0 "> num=#{num}
 				</if>
 			<if test="writer != null">
 			and writer =#{writer}
 				</if>
 		</trim>
 </select>
 
 
 
 
 
 


</mapper>